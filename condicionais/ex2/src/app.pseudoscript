modelo ParImpar:
    construtor():
        ParImpar.number = 0

    funcao start():
        entrada("Digite um número: ", ParImpar.number)
        numberVerification(ParImpar.number)
        
    #funcao que verifica se o número introduzido pelo utilizador é par ou impar.

    funcao numberVerification(number):
        se number % 2 == 0:
            imprime("O número " + number + "é par.")
        senao:
            imprime("O número " + number + "é impar.")
        